using System;
using System.Collections.Generic;
using System.Linq;
using System.Text.RegularExpressions;


namespace Zahlensysteme-Aufgabe3
{
	  class Program
	  {
	  	public static int ConvertDecimalToHexal(int deci)
        	{
      
             		return ConvertToBaseFromDecimal(6, deci);
        	
    		}

        	public static int ConvertHexalToDezimal(int hex)
        	{
      
           		 return ConvertToDecimalFromBase(6, hex);
     
     		}

        

		public static int ConvertToBaseFromDecimal(int toBase, int deci)
		{
		
			int[] ary = new int[4];
        		if (0 <= deci && deci <= 1023)
        		{
        
            			for (int i = 0; i <= deci.ToString().Length + 2; i++)
            			{
          
                			int value = deci / toBase;
                			int modulo = deci % toBase;
                			ary[i] = modulo;
                			deci = value;
         
        	    		}	
       
       			}
       

           
			Array.Reverse(ary);
       			int newArray = Convert.ToInt32((string.Join("", ary)));
       			return newArray;
       		}
     
     
        	public static int ConvertToDecimalFromBase(int fromBase, int number)
        	{
        
           		int length = number.ToString().Length;
            		int[] array = new int[length];
            		int[] newArray = new int[length];
            		int sum = 0;

            		for (int i = 0; i < length; i++)
            		{
            
                		array[i] = number % 10;
               			number /= 10;
                		newArray[i] += array[i] * Convert.ToInt32(Math.Pow(fromBase, i));
           
           		 }

            
            		for (int j = 0; j < newArray.Length; j++)
           		 {
	   		 	
				sum += newArray[j];
            
            		}
           
            		return sum;
        
            	}
        
        
        
		public static int ConvertNumberToBaseFromBase(int number, int toBase, int fromBase)
        	{

            		if (2 <= fromBase && fromBase <= 10 && 2 <= toBase && toBase <= 10)
            		{
                
                		int deci = ConvertToDecimalFromBase(fromBase, number);
                		int value = ConvertToBaseFromDecimal(toBase, deci);
               			return value;
           		}
            
           		 return -1;
        
       		}
    
}
